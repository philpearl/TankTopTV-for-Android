<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/prog_image_width"
        android:layout_height="@dimen/prog_image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/prog_image_margin"
        android:src="@android:drawable/ic_dialog_alert" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image"
        android:layout_toRightOf="@id/image"
        android:text="Ep Name" 
        android:textAppearance="@android:style/TextAppearance.Large"
        android:background="#FF202020"
        />
    
    <TextView
        android:id="@+id/expires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/text_margin"
        android:text="Jan 12, 2012"
        />

    <TextView 
        android:id="@+id/synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="synopsis goes on for some time"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_below="@id/image"
        android:layout_margin="@dimen/text_margin"        
        />
        

</RelativeLayout>
